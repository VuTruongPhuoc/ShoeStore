@model ShoeStore.Models.Vouchers
@using System.Globalization
@{
    ViewData["Title"] = "Chỉnh sửa voucher";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/homeadmin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/voucher/index" class="nav-link">Voucher</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật voucher</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Voucher</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin cập nhật voucher</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @if (Model != null)
                {
                    <form asp-controller="voucher" asp-action="edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x => x.Id)
                        <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                            <div class="form-group">
                                <label name="Name" class="control-label">Tên voucher</label>
                                <input name="Name" class="form-control" value="@Model.Name" />
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label name="Value" class="control-label">Nhập %</label>
                                <input type="number" name="Value" class="form-control" value="@Model.Value" />
                                @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label name="Code" class="control-label">Nhập mã</label>
                                <input name="Code" class="form-control" value="@Model.Code" />
                                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label name="DiscountAmount" class="control-label">Giảm tối đa</label>
                                <input type="text" class="form-control" name="DiscountAmount" placeholder="Nhập giảm tối đa" value="@Model.DiscountAmount" />
                                @Html.ValidationMessageFor(model => model.DiscountAmount, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label name="Quantity" class="control-label">Số lượng</label>
                                <input type="number" class="form-control" name="Quantity" placeholder="Nhập số lượng" value="@Model.Quantity"/>
                                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label name="StartDate" class="control-label">Ngày bắt đầu</label>
                                <input type="text" class="form-control" id="StartDate" name="StartDate" placeholder="Nhập ngày bắt đầu" value="@Model.StartDate" />
                                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label name="EndDate" class="control-label">Ngày kết thúc</label>
                                <input type="text" class="form-control" id="EndDate" name="EndDate" placeholder="Nhập ngày kết thúc" value="@Model.EndDate" />
                                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label asp-for="Status" class="control-label">Hiển thị</label>
                                @Html.CheckBoxFor(x => x.Status)
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Lưu</button>
                                <a href="/admin/voucher/index" class="btn btn-danger">Quay lại</a>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section Styles {
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/theme.css" />
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
}
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#StartDate').datepicker({
                format: 'mm/dd/yyyy',
                autoclose: true,
                todayHighlight: true
            });
            $('#EndDate').datepicker({
                format: 'mm/dd/yyyy',
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
}


