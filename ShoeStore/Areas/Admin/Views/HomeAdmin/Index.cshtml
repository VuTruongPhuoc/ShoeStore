                        // Hàm vẽ biểu đồ với dữ liệu từ API
                        function DrawChart(data, chartType) {
                            // Hủy bỏ biểu đồ hiện tại nếu có
                            if (yearlyChart) {
                                yearlyChart.destroy();
                            }
                            if (monthlyChart) {
