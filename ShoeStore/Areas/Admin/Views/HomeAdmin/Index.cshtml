                                success: function (data) {
                                    if (data && data.values && data.label) {
                                        growthToLastMonth(data);
                                    } else {
                                        console.error('Invalid data received from API');
                                    }
                                },
                                error: function (error) {
                                    console.error('Error fetching data:', error);
                                }
                            });
                        }
