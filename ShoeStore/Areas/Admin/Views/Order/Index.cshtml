@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model X.PagedList.PagedList<ShoeStore.Models.Order>
@{
    ViewData["Title"] = "Danh sách đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/homeadmin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý đơn hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <!-- Tìm kiếm  -->
                    <form id="searchForm" asp-controller="color" asp-action="Index" method="get">
                        <div class="input-group input-group-sm">
                            <input id="searchText" type="text" name="Searchtext" class="form-control" />
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-info btn-flat">Tìm kiếm</button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã đơn hàng</th>
                        <th>Tên khách hàng</th>
                        <th>Số điện thoại </th>
                        <th>Tiền </th>
                        <th>Hình thức thanh toán</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th style="width:150px">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;

                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.Id">
                                <td>@i</td>
                                <td>@item.Code</td>
                                <td>@item.CustomerName</td>
                                <td>@item.Phone</td>
                                <td>@ShoeStore.Common.Common.FormatNumber(@item.TotalAmount,2)</td>
                                <td style="text-align:center">@(item.TypePayment == 1 ? "COD" : "Chuyển khoản ngân hàng") </td>
                                <td>@(item.StatusOrder == 1 ? "Chờ xác nhận" : "Đang vận chuyển") </td>
                                <td>@item.CreateAt.Value.ToString("dd/MM/yyy")</td>
                                <td>
                                    <a href="~/admin/order/vieworder/@item.Id" class="btn btn-sm btn-primary">Xem</a>
                                </td>
                            </tr>
                            i = i + 1;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào!</td>
                        </tr>
                    }

                </tbody>
            </table>
            @if (Model != null && Model.Any())
            {
                <div class="row">
                    <div class="col-12 d-flex justify-content-end" style="float:right">
                        <a href="#">
                            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page }),
                                     new X.PagedList.Web.Common.PagedListRenderOptions
                        {
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" }
                        })
                        </a>

                    </div>
                </div>
            }

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
