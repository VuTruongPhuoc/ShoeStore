@model ShoeStore.Models.ProductDetail
@{
    ViewData["Title"] = "Cập nhật chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/homeadmin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/product/index" class="nav-link">Sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật chi tiết sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Chi tiết sản phẩm</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin cập nhật chi tiết sản phẩm</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @if (Model != null)
                {
                    <form asp-controller="productdetail" asp-action="edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x => x.Id)
                        <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">                        
                            <div class="form-group">
                                <label  class="control-label">Sản phẩm</label>
                                <input  class="form-control" value="@Model.Product.Name" readonly/>   
                            </div>
                            <div class="form-group">
                                <label name="Quantity" class="control-label">Số lượng</label>
                                <input name="Quantity" class="form-control" value="@Model.Quantity" readonly type="number"/>
                            </div>
                            <div class="form-group">
                                <label name="Price" class="control-label">Giá</label>
                                <input name="Price" asp-for="Price" class="form-control" value="@Model.Price" type="number" min="0" data-a-dec="," data-a-sep="." />
                                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label name="OriginalPrice" class="control-label">Giá Nhập</label>
                                <input name="OriginalPrice" id="demoOriginalPrice" class="form-control auto" type="number" min="0" value="@Model.OriginalPrice"/>
                                @Html.ValidationMessageFor(model => model.OriginalPrice, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label name="PriceSale" class="control-label">Giá khuyến mãi</label>
                                <input name="PriceSale" id="demoPriceSale" class="form-control auto" type="number" min="0" value="@Model.PriceSale" />
                                @Html.ValidationMessageFor(model => model.PriceSale, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label name="SizeId" class="control-label">Kích cỡ</label>
                                <select name="SizeId" class="selectpicker form-control" aria-label="size 3 select example" onchange="addToList()">
                                    @if (ViewBag.Size != null)
                                    {
                                        foreach (var item in ViewBag.Size)
                                        {
                                            <option value="@item.Id.ToString()" @(item.Id == Model.SizeId ? "selected" : "")> @item.Name</option>
                                        }
                                    }
                                </select>
                                @Html.ValidationMessageFor(model => model.SizeId, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label name="ColorId" class="control-label">Màu sắc</label>
                                <select name="ColorId" class="selectpicker form-control" aria-label="size 3 select example" onchange="addToList()">
                                    @if (ViewBag.Color != null)
                                    {
                                        foreach (var item in ViewBag.Color)
                                        {
                                            <option value="@item.Id.ToString()" @(item.Id == Model.ColorId ? "selected" : "")> @item.Name</option>
                                        }
                                    }
                                </select>
                                @Html.ValidationMessageFor(model => model.ColorId, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label asp-for="Status" class="control-label">Hiển thị</label>
                                @Html.CheckBoxFor(x => x.Status, new { @checked = "@checked" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Lưu</button>
                                <a href="/admin/productdetail/index/@Model.ProductId" class="btn btn-danger">Quay lại</a>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section Styles {
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/theme.css" />
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
    <link rel="stylesheet" href="~/admin/content/elfinder/css/elfinder.full.css" />
    <link rel="stylesheet" href="~/admin/content/elfinder/css/theme.min.css" />
    <link rel="stylesheet" href="~/admin/content/elfinder-material-theme/Material/css/theme-gray.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>
    <!-- Include elFinder JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/elfinder/2.1.59/js/elfinder.min.js"></script>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function elfinderDialog(editor) {
            var fm = $('<div id="elfinder" />').dialogelfinder({
                url: '/admin/quan-ly-tep-tin/connector',
                baseUrl: "/elfinder/",
                width: 840,
                height: 450,
                destroyOnClose: true,
                getFileCallback: function (files, fm) {
                    console.log(files);
                    editor.invoke('editor.insertImage', files.url);
                },
                commandsOptions: {
                    getfile: {
                        oncomplete: 'close',
                        folders: false
                    }
                }
            }).dialogelfinder('instance');
        }
        $('#txtDetail').summernote({
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['fontname', ['fontname']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'Image', 'video', 'elfinder']],
                ['view', ['fullscreen', 'codeview', 'help']],
            ],
        });
    </script>
}

