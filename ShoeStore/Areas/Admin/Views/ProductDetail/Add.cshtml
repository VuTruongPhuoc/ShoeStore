@model ShoeStore.Models.ProductDetail
@{
    ViewData["Title"] = "Thêm mới chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/homeadmin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi tiết sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới chi tiết sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">chi tiết sản phẩm</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin thêm mới chi tiết sản phẩm</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                <form asp-controller="productdetail" asp-action="add" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="card">
                            <div class="card-header p-2">
                                <ul class="nav nav-pills">
                                    <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Thông tin chung</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Hình ảnh</a></li>
                                </ul>
                            </div><!-- /.card-header -->
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="active tab-pane" id="activity">
                                        <div class="form-group">
                                            <label name="ProductId" class="control-label">Sản phẩm</label>
                                            <select name="ProductId" class="selectpicker form-control" aria-label="size 3 select example" onchange="addToList()">
                                                @if (ViewBag.Product != null)
                                                {
                                                    foreach (var item in ViewBag.Product)
                                                    {
                                                        <option value="@item.Id.ToString()" @(item.Id == ViewBag.ProductId ? "selected" : "")> @item.Name</option>
                                                    }
                                                }
                                            </select>
                                            @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label name="Quantity" class="control-label">Số lượng</label>
                                            <input name="Quantity"  class="form-control" type="number" min="0" value="1"/>
                                            @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                                        </div>                                      
                                        <div class="form-group">
                                            <label name="SizeId" class="control-label">Kích cỡ</label>
                                            <select name="SizeId" class="selectpicker form-control" aria-label="size 3 select example" onchange="addToList()">
                                                @if(ViewBag.Size != null) {
                                                    foreach (var item in ViewBag.Size)
                                                    {
                                                        <option value="@item.Id.ToString()"> @item.Name</option>
                                                    }
                                                }
                                            </select>
                                            @Html.ValidationMessageFor(model => model.SizeId, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label name="ColorId" class="control-label">Màu sắc</label>
                                            <select name="ColorId" class="selectpicker form-control" aria-label="size 3 select example" onchange="addToList()">
                                                @if (ViewBag.Color != null)
                                                {
                                                    foreach (var item in ViewBag.Color)
                                                    {
                                                        <option value="@item.Id.ToString()"> @item.Name</option>
                                                    }
                                                }
                                            </select>
                                            @Html.ValidationMessageFor(model => model.ColorId, "", new { @class = "text-danger" })
                                        </div>  
                                        <div class="form-group">
                                            <label name="Price" class="control-label">Giá</label>
                                            <input name="Price" id="demoPrice" class="form-control auto" type="number" min="0" data-a-dec="." data-a-sep="," />
                                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label name="OriginalPrice" class="control-label">Giá Nhập</label>
                                            <input name="OriginalPrice" id="demoOriginalPrice" class="form-control auto" type="number" min="0" />
                                            @Html.ValidationMessageFor(model => model.OriginalPrice, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label name="PriceSale" class="control-label">Giá khuyến mãi</label>
                                            <input name="PriceSale" id="demoPriceSale" class="form-control auto" type="number" min="0" />
                                            @Html.ValidationMessageFor(model => model.PriceSale, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Status" class="control-label">Hiển thị</label>
                                            @Html.CheckBoxFor(x => x.Status, new { @checked = "@checked" })
                                        </div>
                                    </div>
                                    <!-- /.tab-pane -->
                                    <div class="tab-pane" id="timeline">
                                        <div class="row">
                                            <div class="col-md-12 text-right">
                                                <button type="button" class="btn btn-primary" id="btnBrowse">Tải ảnh</button>
                                            </div>
                                            <div class="col-md-12">
                                                <table class="table table-hover" id="tbAnhSanPham">
                                                    <thead>
                                                        <tr>
                                                            <th class="text-center">STT</th>
                                                            <th class="text-center">Ảnh</th>
                                                            <th class="text-center">Ảnh đại diện</th>
                                                            <th class="text-center">Thao tác</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="tbHtml">
                                                    </tbody>
                                                </table>
                                                <input type="hidden" id="tCurrentId" value="0" />
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.tab-pane -->
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                            <a href="/admin/product/index" class="btn btn-danger">Quay lại</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section Styles {
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/theme.css" />
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
    <link rel="stylesheet" href="~/admin/content/elfinder/css/elfinder.full.css" />
    <link rel="stylesheet" href="~/admin/content/elfinder/css/theme.min.css" />
    <link rel="stylesheet" href="~/admin/content/elfinder-material-theme/Material/css/theme-gray.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>
