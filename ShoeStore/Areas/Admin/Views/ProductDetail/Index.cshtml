@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model X.PagedList.PagedList<ShoeStore.Models.ProductDetail>
@{
    ViewData["Title"] = "Danh sách chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/homeadmin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/productdetail/getlist" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý chi tiết sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/homeadmin">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/productdetail/add" class="btn btn-primary">Thêm mới</a>
                <a href="#" class="btn btn-danger" id="BtnDeleteAll">Xóa</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Sắp xếp -->
                <!-- Tìm kiếm -->
                <div class="col-md-6">
                    <form id="searchForm" asp-controller="productdetail" asp-action="Index" method="get">
                        <div class="input-group input-group-sm">
                            <input id="searchText" type="text" name="Searchtext" class="form-control" value="@ViewBag.Searchtext" />
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-info btn-flat">Tìm kiếm</button>
                            </span>
                        </div>
                    </form>
                </div>
                <!-- Xuất ra excel -->
                <div class="col-md-6" style="position: relative;">
                    <form asp-controller="product" asp-action="ExportToExcel">
                        <div style="position: absolute; right: 0;">
                            <button type="submit" class="btn btn-outline-secondary">
                                Xuất File Excel <i class="fas fa-file-excel"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <table class="table table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="SelectAll" /></th>
                        <th>STT</th>
                        <th>Hình ảnh</th> 
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Kích cỡ</th>
                        <th>Màu sắc</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>

                        <th style="width:150px">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;

                        foreach (var item in Model)
                        {
                            var strCheck = item.Status ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            <tr id="trow_@item.Id">
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td>@i</td>
                                <td><img class="imgproduct" src="@item.Image" data-id="@item.Id" width="60" /></td>
                                <td>@item.Product.Name</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price.ToString("N2")</td>
                                @foreach (var obj in ViewBag.Size)
                                {
                                    if (item.SizeId == obj.Id)
                                    {
                                        <p>
                                            <td>@obj.Name</td>
                                        </p>
                                    }
                                }
                                @foreach (var obj in ViewBag.Color)
                                {
                                    if (item.ColorId == obj.Id)
                                    {
                                        <p>
                                             <td>@obj.Name</td>
                                        </p>
                                    }
                                }
                                <td>@item.CreateAt.Value.ToString("dd/MM/yyyy")</td>
                                <td class="">
                                    <a href='#' data-id="@item.Id" class="btnActive">@Html.Raw(strCheck)</a>
                                </td>
                                <td>
                                    
                                    <a href="~/admin/productdetail/edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>
                                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                     
                                </td>
                            </tr>
                            i = i + 1;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào!</td>
                        </tr>
                    }

                </tbody>
            </table>
            @if (Model != null && Model.Any())
            {
                <div class="row">
                    <div class="col-6 d-flex justify-content-end">
                        <a href="#">
                            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page }),
                                     new X.PagedList.Web.Common.PagedListRenderOptions
                        {
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" }
                        })
                        </a>

                    </div>
                </div>
            }

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
<div id="dialog">
    <iframe id="myIframe" style="border: 0; width: 100%; height: 100%;"></iframe>
</div>
@section Scripts {
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            $("#dialog").dialog({
                autoOpen: false,
                show: "fade",
                hide: "fade",
                modal: true,
                height: '600',
                width: '1000',
                resizable: true,
                title: 'Quản lý ảnh sản phẩm',
                close: function () {
                    window.location.reload();
                }
            });
            $('body').on("click", ".imgproduct", function () {
                var proid = $(this).attr("data-id");
                $("#dialog #myIframe").attr("src", "/admin/ProductImage/Index?id=" + proid);
                $('#dialog').dialog('open');
                return false;
            });
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm('Bạn có muốn xóa bản ghi này không?');
                if (conf === true) {
                    $.ajax({
                        url: '/admin/productdetail/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });
            $('body').on('click', '.btnActive', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = btn.data("id");
                $.ajax({
                    url: '/admin/productdetail/IsActive',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (btn.find("i").hasClass("fa-check")) {
                                btn.html("<i class='fas fa-times text-danger'></i>");

                            } else {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            }
                        }

                    }
                });
            });
        });
    </script>
}


